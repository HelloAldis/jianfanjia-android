<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg" >

    <com.jianfanjia.cn.view.MainHeadView
        android:id="@+id/my_ower_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" />

    <ListView
        android:id="@+id/my_ower_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_ower_head_layout"
        android:layout_marginTop="@dimen/space_8"
        android:cacheColorHint="#ffffff"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/space_8"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />
    
      <ViewStub android:id="@+id/empty" 
       android:layout_width="fill_parent" 
	   android:layout_height="fill_parent" 
	   android:layout_below="@+id/my_ower_head_layout"
       android:layout_marginTop="@dimen/space_8"
       android:layout_gravity="center" 
       android:layout="@layout/view_error_layout" 
	/>   

</RelativeLayout>