<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg" >

    <RelativeLayout
        android:id="@+id/about_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/head_layout_bg" >

        <TextView
            android:id="@+id/share_back"
            style="@style/site_listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/share_title"
            style="@style/site_listview_item_text_style_title"
            android:layout_centerInParent="true"
            android:text="@string/share_title"
            android:textColor="@color/main_color_black" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/share_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:src="@drawable/icon_jianfanjia_qr" />

    <TextView
        android:id="@+id/share_tip"
        style="@style/site_listview_item_text_style_middle"
        android:layout_alignLeft="@+id/share_qr"
        android:layout_alignRight="@+id/share_qr"
        android:layout_below="@+id/share_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/share_tip"
        android:textColor="@color/main_color_black" />

</RelativeLayout>