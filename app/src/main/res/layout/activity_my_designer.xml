<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg" >

    <ImageView
        android:id="@+id/designer_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="gone" />
    
    <ImageView
        android:id="@+id/designer_fg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cover_sidebar"
        android:visibility="gone" />

    <com.jianfanjia.cn.view.MainHeadView
        android:id="@+id/my_designer_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/my_designer_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_designer_head_layout"
        android:background="@color/transparent"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <com.jianfanjia.cn.layout.CircleImageView
                android:id="@+id/my_designer_head_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_sidebar_default_designer" />

            <TextView
                android:id="@+id/my_designer_name"
                style="@style/site_listview_item_text_style_middle"
                android:layout_below="@+id/my_designer_head_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/my_designer_name"
                android:textColor="@color/font_white" />

            <ImageView
                android:id="@+id/my_designer_sex_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/my_designer_name"
                android:layout_alignTop="@+id/my_designer_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/my_designer_name"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_designer_user_man" />

            <ImageView
                android:id="@+id/my_designer_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_designer_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_16"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_designer_verify" />

            <LinearLayout
                android:id="@+id/my_designer_middle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_designer_verify"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/my_designer_middle_item1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/my_designer_product_sum"
                        style="@style/site_listview_item_text_style_middle"
                        android:text="@string/my_designer_product_sum"
                        android:textColor="@color/main_color_orange" />

                    <TextView
                        style="@style/site_listview_item_text_style_small"
                        android:layout_marginTop="8dp"
                        android:text="@string/my_designer_product"
                        android:textColor="@color/main_color_grey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/my_designer_middle_item2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/my_designer_appointment_sum"
                        style="@style/site_listview_item_text_style_middle"
                        android:text="@string/my_designer_appointment_sum"
                        android:textColor="@color/main_color_orange" />

                    <TextView
                        style="@style/site_listview_item_text_style_small"
                        android:layout_marginTop="8dp"
                        android:text="@string/my_designer_appointment"
                        android:textColor="@color/main_color_grey" />
                </LinearLayout>
            </LinearLayout>
           
            <Button
                android:id="@+id/btn_call_designer"
                style="@style/button_login_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/space_32"
                android:layout_marginRight="@dimen/space_32"
                android:layout_below="@+id/my_designer_middle_layout"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:text="@string/call_designer" />

        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_designer_head_layout"
        android:layout_marginTop="@dimen/space_8"
        layout="@layout/view_error_layout"
        />

</RelativeLayout>