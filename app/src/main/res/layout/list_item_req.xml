<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ltm_req_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/font_white"
        android:paddingBottom="@dimen/space_8"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_8">

        <com.jianfanjia.cn.layout.CircleImageView
            android:id="@+id/ltm_req_owner_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_sidebar_default_user" />

        <TextView
            android:id="@+id/ltm_req_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ltm_req_owner_head"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_toRightOf="@+id/ltm_req_owner_head"
            android:text="@string/str_cell" />

        <TextView
            android:id="@+id/ltm_req_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ltm_req_owner_head"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_toRightOf="@+id/ltm_req_cell"
             />

        <ImageButton
            android:id="@+id/ltm_req_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/ltm_req_cell"
            android:layout_alignWithParentIfMissing="false"
            android:background="@mipmap/icon_setting_next"
            android:padding="8dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/ltm_req_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ltm_req_cell"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_8"
            android:layout_toRightOf="@+id/ltm_req_owner_head"
            android:text="@string/str_publish_time" />

        <TextView
            android:id="@+id/ltm_req_updatetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ltm_req_starttime"
            android:layout_alignStart="@+id/ltm_req_starttime"
            android:layout_below="@+id/ltm_req_starttime"
            android:layout_marginTop="4dp"
            android:text="@string/str_update_time" />

        <TextView
            android:id="@+id/ltm_req_starttime_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ltm_req_updatetime"
            android:layout_alignLeft="@+id/ltm_req_updatetime_cont"
            android:layout_alignStart="@+id/ltm_req_updatetime_cont"
            android:text="New Text" />

        <TextView
            android:id="@+id/ltm_req_updatetime_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ltm_req_updatetime"
            android:layout_toEndOf="@+id/ltm_req_updatetime"
            android:layout_toRightOf="@+id/ltm_req_updatetime"
            android:text="New Text" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/ltm_req_designer_layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.jianfanjia.cn.layout.CircleImageView
                android:id="@+id/ltm_req_designer_head0"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_sidebar_default_designer" />

            <TextView
                android:id="@+id/ltm_req_designer_name0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltm_req_designer_head0"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="New Text" />

            <TextView
                android:id="@+id/ltm_req_designer_status0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ltm_req_designer_name0"
                android:layout_marginTop="8dp"
                android:text="New Text" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ltm_req_designer_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.jianfanjia.cn.layout.CircleImageView
                android:id="@+id/ltm_req_designer_head1"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_sidebar_default_designer" />

            <TextView
                android:id="@+id/ltm_req_designer_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltm_req_designer_head1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="New Text" />

            <TextView
                android:id="@+id/ltm_req_designer_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ltm_req_designer_name1"
                android:layout_marginTop="8dp"
                android:text="New Text" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ltm_req_designer_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.jianfanjia.cn.layout.CircleImageView
                android:id="@+id/ltm_req_designer_head2"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_sidebar_default_designer" />

            <TextView
                android:id="@+id/ltm_req_designer_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ltm_req_designer_head2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="New Text" />

            <TextView
                android:id="@+id/ltm_req_designer_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ltm_req_designer_name2"
                android:layout_marginTop="8dp"
                android:text="New Text" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ltm_req_gotopro"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/font_white"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/str_goto_pro" />


</RelativeLayout>