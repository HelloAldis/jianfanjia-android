<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg">

    <com.jianfanjia.cn.supervisor.view.MainHeadView
        android:id="@+id/check_pic_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mygridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/check_pic_head_layout"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:scrollbars="none" />

</RelativeLayout>