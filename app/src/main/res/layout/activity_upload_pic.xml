<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/site_content_bg" >

    <RelativeLayout
        android:id="@+id/upload_pic_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48" >

        <TextView
            android:id="@+id/upload_pic_back"
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/upload_pic_title"
            style="@style/listview_item_text_style_big"
            android:layout_centerInParent="true"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/upload_pic_edit_status"
            style="@style/listview_item_text_style_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_16"
            android:text="@string/finish"
            android:textColor="@color/back_color" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/light_white_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm_upload"
        android:layout_below="@+id/upload_pic_head_layout"
        android:layout_marginTop="@dimen/space_8"
        android:background="@color/font_white"
        android:orientation="horizontal"
        android:padding="@dimen/space_8"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                style="@style/listview_item_text_style_middle"
                android:layout_gravity="center_horizontal"
                android:text="@string/show_pic"
                android:textColor="@color/black_color" />

            <ListView
                android:id="@+id/show_pic_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_8"
                android:cacheColorHint="#ffffff"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/space_1"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                style="@style/listview_item_text_style_middle"
                android:layout_gravity="center_horizontal"
                android:text="@string/upload_pic"
                android:textColor="@color/black_color" />

            <ListView
                android:id="@+id/upload_pic_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/space_8"
                android:cacheColorHint="#ffffff"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/space_1"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/divier_line"
        android:layout_above="@+id/btn_confirm_upload" />

    <Button
        android:id="@+id/btn_confirm_upload"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_selector"
        android:text="@string/confirm_upload"
        android:textColor="@color/font_white"
        android:textSize="17sp" />

</RelativeLayout>