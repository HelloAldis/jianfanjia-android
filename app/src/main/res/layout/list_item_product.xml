<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@color/font_white"
    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:contentPadding="8dp">

    <RelativeLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/list_item_product_img"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:scaleType="centerCrop" />

        <com.jianfanjia.cn.view.layout.CircleImageView
            android:id="@+id/list_item_head_img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_below="@id/list_item_product_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dip"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:border_color="@color/white"
            app:border_width="2dip" />

        <TextView
            android:id="@+id/list_item_xiaoqu_text"
            style="@style/listview_item_text_style_middle"
            android:layout_below="@id/list_item_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dip"
            android:textColor="@color/home_page_text_color"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_produce_text"
            style="@style/listview_item_text_style_small"
            android:layout_below="@id/list_item_xiaoqu_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:textColor="@color/home_page_text_color"
            android:textSize="@dimen/text_size_11" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noImgLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#30000000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pix_default"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</android.support.v7.widget.CardView>