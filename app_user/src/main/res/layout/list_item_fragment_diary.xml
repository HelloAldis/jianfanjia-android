<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/font_white"
              android:orientation="vertical">

    <View style="@style/divier_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.jianfanjia.cn.view.layout.CircleImageView
                android:id="@+id/diary_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default_head"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_16">

                <TextView
                    android:id="@+id/ltm_diary_cellname"
                    style="@style/listview_item_text_style_big"
                    android:ellipsize="end"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="@string/str_cell"
                    android:textColor="@color/orange_color"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/ltm_diary_stage"
                    style="@style/listview_item_text_style_middle"
                    android:layout_alignBaseline="@+id/ltm_diary_cellname"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_toRightOf="@+id/ltm_diary_cellname"
                    android:text="@string/kai_gong"
                    android:textColor="@color/grey_color"/>

                <TextView
                    android:id="@+id/ltm_diary_delte"
                    style="@style/listview_item_text_style_middle"
                    android:layout_alignBaseline="@+id/ltm_diary_cellname"
                    android:layout_alignParentRight="true"
                    android:text="@string/str_delete"
                    android:textColor="@color/blue_color"/>

                <TextView
                    android:id="@+id/ltm_diary_goingtime"
                    style="@style/listview_item_text_style_middle"
                    android:layout_alignParentBottom="true"
                    android:text="3分钟前"
                    android:textColor="@color/grey_color"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ltm_diary_content"
            style="@style/listview_item_text_style_middle"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/space_16"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="5"
            android:text="这个装修效果真的不错，我很喜欢"/>
    </LinearLayout>

    <View style="@style/divier_line"/>

    <LinearLayout
        android:id="@+id/ltm_diary_action_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ltm_diary_like_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_item_layout_bg_selector">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_like_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_ok"/>

                <TextView
                    android:id="@+id/tv_like_count"
                    style="@style/listview_item_text_style_big"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_toRightOf="@+id/iv_like_icon"
                    android:text="0"/>

            </RelativeLayout>


        </RelativeLayout>

        <View style="@style/vertical_divier_line"/>

        <RelativeLayout
            android:id="@+id/ltm_diary_comment_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_item_layout_bg_selector">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/iv_comment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_no_comment"/>

                <TextView
                    android:id="@+id/tv_comment_count"
                    style="@style/listview_item_text_style_big"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_toRightOf="@+id/iv_comment_icon"
                    android:text="0"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divier_line"/>
</LinearLayout>