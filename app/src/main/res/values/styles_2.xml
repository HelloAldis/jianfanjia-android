<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_listview_base">
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="my_rationgbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:maxHeight">28dip</item>
    </style>

    <style name="list_item_ratingbar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/list_item_rating_drawable_selector</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">15dip</item>
    </style>
</resources>