<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_16">

        <TextView
            android:id="@+id/list_item_req_tip_title"
            style="@style/listview_item_text_style_small"
            android:text="需求提醒"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/list_item_req_tip_date"
            style="@style/listview_item_text_style_small"
            android:layout_alignBottom="@id/list_item_req_tip_title"
            android:layout_alignParentRight="true"
            android:text="2015-09-22 23:05"
            android:textColor="@color/main_color_grey"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/list_item_req_tip_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_req_tip_title"
            android:layout_marginTop="@dimen/space_10"
            android:text="设计师戴涛已经响应您的需求，请等待设计师联系"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <ImageView
        style="@style/my_item_layout_image_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_10"
        android:contentDescription="@null" />
</RelativeLayout>