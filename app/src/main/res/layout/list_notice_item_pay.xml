<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:paddingTop="@dimen/space_16">

        <TextView
            android:id="@+id/list_item_tip_cell_name"
            style="@style/listview_item_text_style_small"
            android:text="清江山水"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/list_item_tip_pay_node"
            style="@style/listview_item_text_style_small"
            android:layout_alignBottom="@id/list_item_tip_cell_name"
            android:layout_alignParentRight="true"
            android:text="泥木阶段"
            android:textColor="@color/main_color_grey"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/list_item_tip_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_tip_cell_name"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/list_item_fukuan_example"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/list_item_tip_pay_time"
            style="@style/listview_item_text_style_small"
            android:layout_below="@id/list_item_tip_pay_name"
            android:text="2015-09-22 23:05"
            android:textColor="@color/main_color_grey"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

</RelativeLayout>