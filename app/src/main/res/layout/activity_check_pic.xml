<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    android:fitsSystemWindows="true">

    <com.jianfanjia.cn.designer.view.MainHeadView
        android:id="@+id/check_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="@string/confirm_upload"
        android:textColor="@color/font_white"
        android:textSize="16sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mygridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_confirm"
        android:layout_below="@id/check_head_layout"
        android:layout_marginLeft="@dimen/space_7"
        android:layout_marginRight="@dimen/space_7"
        android:scrollbars="none" />

</RelativeLayout>