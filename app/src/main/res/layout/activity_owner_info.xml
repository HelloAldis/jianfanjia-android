<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ownerinfoLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg">

    <com.jianfanjia.cn.designer.view.MainHeadView
        android:id="@+id/ownerinfo_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/ownerinfo_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ownerinfo_head_layout"
        android:layout_marginTop="@dimen/space_8">

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/head_layout"
                style="@style/my_list_item_layout_style"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_16"
                android:paddingTop="@dimen/space_16">

                <TextView
                    style="@style/listview_item_text_style_middle"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/user_head"
                    android:textColor="@color/black_color" />

                <com.jianfanjia.cn.designer.view.layout.CircleImageView
                    android:id="@+id/head_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/name_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    android:id="@+id/name"
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_name"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/nameText"
                    style="@style/listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_48"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/name"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/black_color" />

            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/sex_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_sex"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/sexText"
                    style="@style/listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_color" />

            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/phone_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_phone"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/phoneText"
                    style="@style/listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_color" />

            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/address_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_address"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/addressText"
                    style="@style/listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black_color" />

            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/home_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    android:id="@+id/home"
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_home"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/homeText"
                    style="@style/listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_48"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/home"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/black_color" />

            </RelativeLayout>

            <View style="@style/divier_line" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/button_login_style"
                android:layout_margin="@dimen/space_24"
                android:text="@string/confirm"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/error_include"
        layout="@layout/view_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ownerinfo_head_layout"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>