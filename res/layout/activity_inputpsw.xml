<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="@color/main_layout_bg" >
    
    <include layout="@layout/common_head_layout"
        android:id="@+id/inputpsw_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputpsw_top"
        android:layout_marginTop="@dimen/space_8"
        android:orientation="vertical"
        android:padding="@dimen/space_16" >

        <LinearLayout style="@style/item_input_container" >

            <EditText
                android:id="@+id/et_password"
                style="@style/item_input_edittext"
                android:layout_marginLeft="@dimen/space_8"
                android:imeOptions="actionNext"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_input_container"
            >

            <EditText
                android:id="@+id/et_password_two"
                style="@style/item_input_edittext"
                android:layout_marginLeft="@dimen/space_8"
                android:hint="@string/hint_inputpsw_two"
                android:inputType="textPassword" />
            
        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            style="@style/button_login_style"
            android:layout_marginTop="30dp"
            android:text="@string/confirm" />
    </LinearLayout>
    

</RelativeLayout>
