<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_48"
    android:background="@color/head_layout_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_back_layout"
        android:layout_width="@dimen/space_60"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/common_head_back_bg_selector">

        <ImageView
            android:id="@+id/head_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_18"
            android:src="@mipmap/icon_register_back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        style="@style/listview_item_text_style_big"
        android:layout_centerInParent="true"
        android:textColor="@color/light_black_color"
        android:visibility="gone" />

    <TextView
        android:id="@+id/head_right_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_head_back_bg_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/space_18"
        android:paddingRight="@dimen/space_18"
        android:textColor="@color/grey_color"
        android:textSize="@dimen/middle_size"
        android:text="@string/edit"/>


</RelativeLayout>