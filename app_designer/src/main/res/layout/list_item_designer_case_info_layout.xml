<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cell_name"
        style="@style/listview_item_text_style_big"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dip"
        android:textColor="@color/home_page_text_color" />

    <TextView
        android:id="@+id/stylelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cell_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dip"
        android:textColor="@color/home_page_text_color" />

    <TextView
        android:id="@+id/tv_dectype_and_totalprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stylelName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dip"
        android:textColor="@color/home_page_text_color"/>

    <FrameLayout
        android:id="@+id/imageLayout"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_below="@id/tv_dectype_and_totalprice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dip">

        <com.jianfanjia.cn.designer.view.layout.CircleImageView
            android:id="@+id/designerinfo_head_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:border_color="@color/white"
            app:border_width="2dip" />

        <ImageView
            android:id="@+id/designerinfo_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/icon_auth"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/produceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLayout"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="30dip"
        android:textColor="@color/home_page_text_color"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/produceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/produceTitle"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:textColor="@color/main_color_grey"
        android:textSize="14sp" />



</RelativeLayout>