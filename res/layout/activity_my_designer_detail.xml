<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/designer_detail_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_loading_720"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cover_sidebar" />

    <RelativeLayout
        android:id="@+id/owner_detail_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/designer_detail_back"
            style="@style/site_listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/designer_detail_title"
            style="@style/site_listview_item_text_style_title"
            android:layout_centerInParent="true"
            android:text="@string/designer_detail"
            android:textColor="@color/font_white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/designer_detail_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/owner_detail_head_layout" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24" >

            <ImageView
                android:id="@+id/designer_detail_head_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_sidebar_default_user" />

            <TextView
                android:id="@+id/designer_detail_name"
                style="@style/site_listview_item_text_style_middle"
                android:layout_below="@+id/designer_detail_head_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/my_example_name"
                android:textColor="@color/font_white" />

            <ImageView
                android:id="@+id/designer_detail_sex_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/owner_detail_name"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/owner_detail_name"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_designer_user_man" />

            <TextView
                android:id="@+id/pro_stage"
                style="@style/site_listview_item_text_style_middle"
                android:layout_below="@+id/designer_detail_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="@color/main_color_orange" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>