<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/site_content_bg" >

    <RelativeLayout
        android:id="@+id/ower_site_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48" >

        <ImageView
            android:id="@+id/ower_site_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_register_back" />

        <TextView
            android:id="@+id/comment_back"
            style="@style/site_listview_item_text_style_big"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/ower_site_title"
            style="@style/site_listview_item_text_style_title"
            android:layout_centerInParent="true"
            android:text="@string/comment"
            android:textColor="@color/site_text_color1" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:layout_alignParentBottom="true"
        android:background="@color/font_white" >

        <View
            style="@style/divier_line"
            android:layout_alignParentTop="true"
            android:background="@color/horzontal_line_color" />

        <TextView
            android:id="@+id/add_comment"
            style="@style/site_listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_32"
            android:text="@string/add_comment"
            android:textColor="#d5d5d5" />
    </RelativeLayout>

</RelativeLayout>