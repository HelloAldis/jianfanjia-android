<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    android:orientation="vertical">

    <com.jianfanjia.cn.view.MainHeadView
        android:id="@+id/act_edit_req_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_8">

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_city"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_city" />


                <ImageView
                    android:id="@+id/act_edit_req_city_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_city_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_street"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_street_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_street" />

                <EditText
                    android:id="@+id/act_edit_req_street_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/act_edit_req_street_title"
                    android:layout_toRightOf="@+id/act_edit_req_street_title"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/space_16"
                    android:paddingLeft="@dimen/space_16"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:gravity="right"
                    android:background="@null" />

            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <LinearLayout
                android:id="@+id/act_edit_req_cell"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/act_edit_req_cell_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_cell" />

                <EditText
                    android:id="@+id/act_edit_req_cell_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:background="@null" />

                <TextView
                    android:id="@+id/act_edit_req_qi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_qi"
                    />

                <EditText
                    android:id="@+id/act_edit_req_qi_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_16"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:background="@null" />
            </LinearLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <LinearLayout
                android:id="@+id/act_edit_req_adressdetail"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/act_edit_req_dong_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_dong" />

                <EditText
                    android:id="@+id/act_edit_req_dong_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:background="@null" />

                <TextView
                    android:id="@+id/act_edit_req_danyuan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_danyuan"
                    />

                <EditText
                    android:id="@+id/act_edit_req_danyuan_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_16"
                    android:paddingRight="@dimen/space_16"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:background="@null" />

                <TextView
                    android:id="@+id/act_edit_req_shi_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_shi" />

                <EditText
                    android:id="@+id/act_edit_req_shi_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/space_16"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:background="@null" />
            </LinearLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <View
                style="@style/divier_line"
                android:layout_marginTop="@dimen/space_8"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_housetype"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_housetype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_housetype" />


                <ImageView
                    android:id="@+id/act_edit_req_housetype_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_housetype_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_housearea"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_housearea_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_decoratearea" />


                <EditText
                    android:id="@+id/act_edit_req_housearea_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/act_edit_req_housearea_title"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/act_edit_req_housearea_unit"
                    android:paddingRight="@dimen/space_8"
                    android:paddingLeft="@dimen/space_8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLength="4"
                    android:gravity="right"
                    android:inputType="number"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/act_edit_req_housearea_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="@string/str_sq_unit" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_decoratetype"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_decoratetype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_decoratetype" />


                <ImageView
                    android:id="@+id/act_edit_req_decoratetype_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_decoratetype_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_decoratebudget"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_decoratebudget_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_decoratebudget" />


                <EditText
                    android:id="@+id/act_edit_req_decoratebudget_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/act_edit_req_decoratebudget_title"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/act_edit_req_decoratebudget_unit"
                    android:paddingRight="@dimen/space_8"
                    android:paddingLeft="@dimen/space_8"
                    android:singleLine="true"
                    android:maxLength="4"
                    android:gravity="right"
                    android:inputType="number"
                    android:background="@null" />

                <TextView
                    android:id="@+id/act_edit_req_decoratebudget_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="@string/unit_million" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <View
                style="@style/divier_line"
                android:layout_marginTop="@dimen/space_8"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_persons"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_persons_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_persons" />


                <ImageView
                    android:id="@+id/act_edit_req_persons_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_persons_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_lovestyle"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_lovestyle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_lovestyle" />


                <ImageView
                    android:id="@+id/act_edit_req_lovestyle_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_lovestyle_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />

            <RelativeLayout
                android:id="@+id/act_edit_req_lovedesistyle"
                style="@style/my_item_layout_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:id="@+id/act_edit_req_lovedesistyle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/str_lovedesistyle" />


                <ImageView
                    android:id="@+id/act_edit_req_lovedesistyle_goto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_setting_next" />

                <TextView
                    android:id="@+id/act_edit_req_lovedesistyle_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp" />
            </RelativeLayout>

            <View
                style="@style/divier_line"
                android:background="@color/horzontal_line_color" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
