<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    tools:context="com.jianfanjia.cn.fragment.MyFragment">

    <ScrollView
        android:id="@+id/setting_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:background="@mipmap/bg_home_banner1">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">


                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="#ffffff"
                        android:textSize="16.0dip"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="18635897456"
                        android:textColor="#ffffff"
                        android:textSize="16.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/notify_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="我的提醒"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/my_designer_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="我的意向设计师"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/my_site_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="我的装修工地"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />


            <View
                style="@style/divier_line"
                android:layout_marginTop="16dp" />

            <RelativeLayout
                android:id="@+id/setting_layout"
                style="@style/my_list_item_layout_style">

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="设置"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
