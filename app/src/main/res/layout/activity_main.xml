<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="vertical">

        <View
            android:id="@+id/head_divier"
            style="@style/divier_line"
            android:background="@color/horzontal_line_color" />

        <RadioGroup
            android:id="@+id/tab_rg_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_rb_1"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:checked="true"
                android:drawableTop="@drawable/rb_btn_bg1"
                android:paddingBottom="3dp"
                android:paddingTop="5dp"
                android:text="首页"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14" />

            <RadioButton
                android:id="@+id/tab_rb_2"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/rb_btn_bg3"
                android:paddingBottom="3dp"
                android:paddingTop="5dp"
                android:text="工地管理"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14" />

            <RadioButton
                android:id="@+id/tab_rb_3"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableTop="@drawable/rb_btn_bg4"
                android:paddingBottom="3dp"
                android:paddingTop="5dp"
                android:text="我的"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_14" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>