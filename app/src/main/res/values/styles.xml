<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_rb_style">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:button">@null</item>
    </style>

    <!-- horizontal line_style -->
    <style name="divier_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/light_white_color</item>
    </style>

    <!-- vertical line_style -->
    <style name="vertical_divier_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="home_page_divier_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dip</item>
        <item name="android:background">@color/light_white_color</item>
    </style>

    <!-- login activity -->
    <style name="button_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:background">@drawable/btn_selector_bg</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>
    <!-- login activity -->

    <style name="button_add_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_40</item>
        <item name="android:background">@drawable/btn_selector_bg</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="dialog_button_ok">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_orange_bg</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="dialog_button_cancel">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_orange_white_bg</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>

    <style name="dialog_button_2">
        <item name="android:textColor">@color/black_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_orange_white_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="dialog_button_1">
        <item name="android:textColor">@color/font_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/btn_orange_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <!-- head_layout -->
    <style name="head_title_text_style">
        <item name="android:textSize">@dimen/big_size</item>
        <item name="android:textColor">#101010</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- head_layout -->


    <!-- my_item_layout__style -->
    <style name="my_item_layout_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/icon_setting_next</item>
    </style>

    <!-- my_item_layout_text_style -->
    <style name="my_item_layout_text_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- site_listview_item_text_style -->
    <style name="listview_item_text_style_small" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/small_size</item>
    </style>

    <style name="listview_item_text_style_middle" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/middle_size</item>
    </style>

    <style name="listview_item_text_style_big" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/big_size</item>
    </style>

    <style name="listview_item_text_style_title" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>
    <!-- my_item_layout_style -->
    <style name="my_list_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_item_layout_height</item>
        <item name="android:background">@drawable/my_item_layout_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_22</item>
        <item name="android:paddingRight">@dimen/space_28</item>
    </style>

    <style name="progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@drawable/notify_dialog_bg</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- ProgressBar  style -->
    <style name="myProgressBarStyleLarge">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_large_shape</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <!-- popub_windows -->
    <style name="popub_anim" mce_bogus="1" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/popub_slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/popub_slide_out_to_bottom</item>
    </style>
    <!-- activity animation -->
    <style name="activity_style" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
    </style>


    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fragment_slide_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_slide_right_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_slide_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_slide_left_exit</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/font_white</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
</resources>
