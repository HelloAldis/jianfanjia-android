<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@color/font_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_item_tip_text"
        style="@style/listview_item_text_style_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_10"
        android:text="@string/str_marched_tip"
        android:textColor="@color/black_color" />

    <com.jianfanjia.cn.view.MyGridView
        android:id="@+id/marchGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:horizontalSpacing="10dp"
        android:listSelector="@drawable/grid_item_selector"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />
</LinearLayout>