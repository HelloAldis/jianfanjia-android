<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >
    
    <RelativeLayout
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:drawableLeft="@drawable/icon_enrollment_back"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="#aaaaaa"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_48"
        android:layout_marginLeft="@dimen/space_48"
        android:layout_marginRight="@dimen/space_48"
        android:layout_below="@+id/top_title"
        android:orientation="vertical"
        >

        <LinearLayout style="@style/item_input_container"
             >

            <EditText
                android:id="@+id/et_username"
                style="@style/item_input_edittext"
                android:hint="@string/hint_username"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_input_container"
            android:layout_marginTop="@dimen/space_16"
            >

            <EditText
                android:id="@+id/et_password"
                style="@style/item_input_edittext"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            style="@style/button_login_style"
            android:layout_marginTop="30dp"
            android:text="@string/next" />
    </LinearLayout>

</RelativeLayout>