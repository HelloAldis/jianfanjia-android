<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:cardBackgroundColor="@color/main_layout_bg"
    tools:cardCornerRadius="0dp"
    tools:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/list_item_works_img"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_item_works_xiaoqu_text"
            style="@style/listview_item_text_style_middle"
            android:layout_below="@id/list_item_works_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_10"
            android:text="小区名称"
            android:textColor="@color/light_black_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_works_produce_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_works_xiaoqu_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_5"
            android:text="100平米"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</android.support.v7.widget.CardView>