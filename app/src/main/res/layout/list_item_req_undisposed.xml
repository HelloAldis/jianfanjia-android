<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white">

    <View
        style="@style/divier_line"/>

    <include android:id="@+id/ltm_req_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/merge_req"/>

    <View
        style="@style/divier_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_16"
        >
        <TextView
            android:id="@+id/measure_tip"
            style="@style/listview_item_text_style_small"
            android:layout_centerHorizontal="true"
            android:text="@string/measure_house_tip"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/measure_tip"
            android:layout_marginTop="@dimen/space_24"
            android:orientation="horizontal">

            <View
                android:id="@+id/button_divider0"
                android:layout_width="@dimen/space_12"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/negative_bt"
                style="@style/dialog_button_cancel"
                android:visibility="visible"
                android:text="@string/refuse"
                />

            <View
                android:id="@+id/button_divider1"
                android:layout_width="@dimen/space_12"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/positive_bt"
                style="@style/dialog_button_ok"
                android:visibility="visible"
                android:text="@string/response"/>

            <View
                android:id="@+id/button_divider2"
                android:layout_width="@dimen/space_12"

                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/divier_line"/>


</LinearLayout>