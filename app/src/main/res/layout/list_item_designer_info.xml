<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_item_product_img"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:scaleType="fitXY" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="-30dip"
        android:layout_height="wrap_content">

        <com.jianfanjia.cn.layout.CircleImageView
            android:id="@+id/list_item_head_img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_item_xiaoqu_text"
            style="@style/site_listview_item_text_style_middle"
            android:layout_below="@id/list_item_head_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="@color/main_color_black" />

        <TextView
            android:id="@+id/list_item_produce_text"
            style="@style/site_listview_item_text_style_small"
            android:layout_below="@id/list_item_xiaoqu_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_10"
            android:textColor="@color/main_color_grey" />


    </RelativeLayout>

</LinearLayout>