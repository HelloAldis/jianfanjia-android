<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/space_24"
              android:paddingRight="@dimen/space_24">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_corner_rectangle"
        android:orientation="vertical"
        android:paddingBottom="@dimen/space_32"
        android:paddingLeft="@dimen/space_24"
        android:paddingRight="@dimen/space_24"
        android:paddingTop="@dimen/space_32">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_email_finish"/>

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_24"
            android:text="@string/appoint_success"
            android:textColor="@color/black_color"
            android:textStyle="bold"/>

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/appoint_tip"
            android:textColor="@color/grey_color"/>


        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="160dp"
            android:layout_height="@dimen/space_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_32"
            android:background="@drawable/text_rectangle_orange_bg"
            android:text="@string/confirm"
            android:textColor="@color/font_white"/>
    </LinearLayout>

</LinearLayout>