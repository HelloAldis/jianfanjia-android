<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_white"
    android:orientation="vertical">

    <View style="@style/divier_line" />

    <include
        android:id="@+id/ltm_req_info_layout"
        layout="@layout/merge_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View style="@style/divier_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/planLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/icon_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_plan" />

                <TextView
                    style="@style/listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_toRightOf="@id/icon_plan"
                    android:text="@string/str_view_plan"
                    android:textColor="@color/designer_info_text_color_bg"
                    />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <View style="@style/divier_line" />


</LinearLayout>