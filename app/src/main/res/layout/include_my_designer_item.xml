<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.jianfanjia.cn.layout.CircleImageView
        android:id="@+id/ltm_my_designer_head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_sidebar_default_user" />

    <RelativeLayout
        android:id="@+id/ltm_my_designer_middle_layout"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_toRightOf="@+id/ltm_my_designer_head"
        android:layout_width="wrap_content">

        <TextView
            style="@style/listview_item_text_style_middle"
            android:id="@+id/ltm_my_designer_name"
            android:text="@string/str_cell"
            android:textColor="@color/black_color" />

        <TextView
            style="@style/listview_item_text_style_small"
            android:id="@+id/ltm_my_designer_status"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/ltm_my_designer_name"
            android:layout_marginTop="@dimen/space_16"
            android:text="@string/str_publish_time"
            android:textColor="@color/grey_color" />
    </RelativeLayout>
    </RelativeLayout>