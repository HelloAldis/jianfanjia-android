<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.jianfanjia.cn.designer.view.MainHeadView
        android:id="@+id/bindingaccount_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/base_info_auth_layout"
        style="@style/my_list_item_layout_style"
        android:layout_marginTop="@dimen/space_10">

        <ImageView
            android:id="@+id/base_info_auth_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_clean" />

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/base_info_auth_icon"
            android:text="@string/base_info_auth"
            android:textColor="@color/light_black_color" />

        <TextView
            android:id="@+id/base_info_auth_stage"
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/base_info_auth_next"
            android:text="已通过认证"
            android:textColor="@color/main_color_grey" />

        <ImageView
            android:id="@+id/base_info_auth_next"
            style="@style/my_item_layout_image_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View style="@style/divier_line" />

    <RelativeLayout
        android:id="@+id/identity_auth_layout"
        style="@style/my_list_item_layout_style">

        <ImageView
            android:id="@+id/identity_auth_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_phone_number" />

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/identity_auth_icon"
            android:text="@string/identity_auth"
            android:textColor="@color/light_black_color" />

        <TextView
            android:id="@+id/identity_auth_stage"
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_12"
            android:layout_toLeftOf="@+id/identity_auth_next"
            android:text="已通过认证"
            android:textColor="@color/main_color_grey" />

        <ImageView
            android:id="@+id/identity_auth_next"
            style="@style/my_item_layout_image_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View style="@style/divier_line" />

    <RelativeLayout
        android:id="@+id/product_auth_layout"
        style="@style/my_list_item_layout_style">

        <ImageView
            android:id="@+id/product_auth_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_kefu" />

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/product_auth_icon"
            android:text="@string/product_auth"
            android:textColor="@color/light_black_color" />

        <ImageView
            style="@style/my_item_layout_image_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View style="@style/divier_line" />

    <RelativeLayout
        android:id="@+id/process_team_auth_layout"
        style="@style/my_list_item_layout_style">

        <ImageView
            android:id="@+id/process_team_auth_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_kefu" />

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/process_team_auth_icon"
            android:text="@string/process_team_auth"
            android:textColor="@color/light_black_color" />

        <ImageView
            style="@style/my_item_layout_image_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View style="@style/divier_line" />

    <RelativeLayout
        android:id="@+id/email_auth_layout"
        style="@style/my_list_item_layout_style">

        <ImageView
            android:id="@+id/email_auth_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_kefu" />

        <TextView
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_toRightOf="@+id/email_auth_icon"
            android:text="@string/email_auth"
            android:textColor="@color/light_black_color" />

        <ImageView
            style="@style/my_item_layout_image_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null" />
    </RelativeLayout>



</LinearLayout>