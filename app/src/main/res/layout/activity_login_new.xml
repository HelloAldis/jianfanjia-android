<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_white"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/act_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_60">

                <TextView
                    android:id="@+id/act_login"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/title_size" />

                <TextView
                    android:id="@+id/act_register"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="80dp"
                    android:layout_toRightOf="@+id/act_login"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/title_size" />
            </RelativeLayout>

            <ViewFlipper
                android:id="@+id/act_viewflipper"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/act_title_layout"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_24">

                <include
                    layout="@layout/viewpager_item_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <include
                    layout="@layout/viewpager_item_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </ViewFlipper>
        </RelativeLayout>
</RelativeLayout>