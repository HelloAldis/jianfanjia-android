<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_60"
    android:paddingRight="@dimen/space_60"
    android:orientation="vertical">

    <EditText
        android:id="@+id/act_input_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:nextFocusDown="@+id/act_input_password"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:singleLine="true"
        android:hint="@string/input_phone"
        android:textSize="@dimen/middle_size"
        android:textColor="@color/black_color"/>

    <EditText
        android:id="@+id/act_input_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:nextFocusDown="@+id/act_input_phone"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:singleLine="true"
        android:hint="@string/tip_please_input_password"
        android:textSize="@dimen/middle_size"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/act_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:text="@string/forget_pwd"
        android:textSize="@dimen/middle_size"
        android:textColor="@color/black_color"/>

    <Button
        android:id="@+id/login_next"
        android:background="@drawable/btn_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>