<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/site_content_bg" >

    <RelativeLayout
        android:id="@+id/upload_pic_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48" >

        <TextView
            android:id="@+id/upload_pic_back"
            style="@style/site_listview_item_text_style_big"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/upload_pic_title"
            style="@style/site_listview_item_text_style_title"
            android:layout_centerInParent="true"
            android:text="@string/comment"
            android:textColor="@color/site_text_color1" />

        <TextView
            android:id="@+id/upload_pic_edit_status"
            style="@style/site_listview_item_text_style_big"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_16"
            android:text="@string/finish"
            android:textColor="@color/back_color" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

