<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_white"
    android:orientation="vertical">

    <com.jianfanjia.cn.pulltorefresh.library.PullToRefreshScrollView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrHeaderTextAppearance="@android:attr/textAppearanceMedium"
        ptr:ptrHeaderTextColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <include layout="@layout/viewpager_main" />
            </FrameLayout>

            <include
                android:id="@+id/marched_layout"
                layout="@layout/activity_xuqiu_layout" />

            <include
                android:id="@+id/no_marched_layout"
                layout="@layout/activity_no_xuqiu_layout" />

            <com.jianfanjia.cn.view.MyListView
                android:id="@+id/designer_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:cacheColorHint="#00000000"
                android:clipToPadding="false"
                android:divider="@null"
                android:dividerHeight="15dip"
                android:fadingEdge="none"
                android:fastScrollEnabled="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />
        </LinearLayout>
    </com.jianfanjia.cn.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
