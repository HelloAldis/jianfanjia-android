<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/site_head_procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/site_head_procedure_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/site_head_procedure_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_home_checked1" />

            <View
                android:id="@+id/site_head_line_view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/light_white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/site_head_procedure_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_head_procedure_layout"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_marginTop="@dimen/space_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/site_head_procedure_name"
                style="@style/listview_item_text_style_middle"
                android:layout_marginLeft="@dimen/space_8"
                android:textColor="@color/light_black_color" />

            <TextView
                android:id="@+id/site_head_procedure_date"
                style="@style/listview_item_text_style_small"
                android:textColor="@color/main_color_grey" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>