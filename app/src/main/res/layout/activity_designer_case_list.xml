<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    android:orientation="vertical">

    <com.jianfanjia.cn.view.MainHeadView
        android:id="@+id/designer_case_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" />

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/head_layout_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/decAreaLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/decArea_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableRight="@drawable/icon_arrow"
                    android:text="@string/dec_area_str"
                    android:textColor="@color/font_style_colors" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/decTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/decType_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableRight="@drawable/icon_arrow"
                    android:text="@string/dec_type_str"
                    android:textColor="@color/font_style_colors" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/houseTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/houseType_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableRight="@drawable/icon_arrow"
                    android:text="@string/dec_house_type_str"
                    android:textColor="@color/font_style_colors" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/designStyleLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/designStyle_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/space_5"
                    android:drawableRight="@drawable/icon_arrow"
                    android:text="@string/dec_style_str"
                    android:textColor="@color/font_style_colors" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/head_divier"
            style="@style/divier_line"
            android:background="@color/horzontal_line_color" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/req_listview_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jianfanjia.cn.view.library.PullToRefreshRecycleView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pull_refresh_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            ptr:ptrAnimationStyle="flip"
            ptr:ptrHeaderTextColor="#344a5d" />

        <include
            android:id="@+id/empty_include"
            layout="@layout/view_empty_layout"
            android:visibility="gone" />

        <include
            android:id="@+id/error_include"
            layout="@layout/view_error_layout"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>
