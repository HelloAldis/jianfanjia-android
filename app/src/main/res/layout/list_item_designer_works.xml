<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    card_view:cardBackgroundColor="@color/font_white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dip"
    card_view:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_works_img"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/list_item_works_xiaoqu_text"
            style="@style/listview_item_text_style_middle"
            android:layout_below="@id/list_item_works_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_5"
            android:text="小区名称"
            android:textColor="@color/light_black_color" />

        <TextView
            android:id="@+id/list_item_works_produce_text"
            style="@style/listview_item_text_style_small"
            android:layout_below="@id/list_item_works_xiaoqu_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/space_5"
            android:text="100平米"
            android:textColor="@color/main_color_grey" />
    </RelativeLayout>

</android.support.v7.widget.CardView>