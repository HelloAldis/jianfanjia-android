<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tab_rb_style">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:button">@null</item>
    </style>
    <!-- horizontal line_style -->
    <style name="divier_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- vertical line_style -->
    <style name="vertical_divier_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!-- login activity -->
    <style name="item_input_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/space_16</item>
        <item name="android:paddingRight">@dimen/space_16</item>
        <item name="android:background">@drawable/reg_and_login_text_layout_bg</item>
    </style>

    <style name="item_input_edittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textColorHint">@color/font_log_and_res_hint</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="button_login_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_48</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/font_white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>
    <!-- login activity -->


    <!-- head_layout -->
    <style name="head_title_text_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- head_layout -->


    <!-- my_item_layout__style -->
    <style name="my_item_layout_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/icon_setting_next</item>
    </style>

    <!-- my_item_layout_text_style -->
    <style name="my_item_layout_text_style_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- site_listview_item_text_style -->
    <style name="site_listview_item_text_style_small" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="site_listview_item_text_style_middle" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="site_listview_item_text_style_big" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="site_listview_item_text_style_title" parent="my_item_layout_text_style_base">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <!-- my_item_layout_style -->
    <style name="my_item_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_item_layout_height</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/space_24</item>
        <item name="android:paddingRight">@dimen/space_24</item>
    </style>

</resources>