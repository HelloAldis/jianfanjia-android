<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg" >

    <include
        android:id="@+id/register_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/register_head_layout" />
    
    
    <TextView
        android:id="@+id/register_tip"
        style="@style/site_listview_item_text_style_small"
        android:layout_below="@+id/register_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_16"
        android:text="验证码已发送" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_tip"
        android:layout_marginLeft="@dimen/space_48"
        android:layout_marginRight="@dimen/space_48"
        android:layout_marginTop="@dimen/space_24"
        android:orientation="vertical" >

        <LinearLayout style="@style/item_input_container" >

            <EditText
                android:id="@+id/et_username"
                style="@style/item_input_edittext"
                android:layout_marginLeft="@dimen/space_8"
                android:hint="@string/hint_username"
                android:imeOptions="actionNext"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_input_container"
            android:layout_marginTop="@dimen/space_16" >

            <EditText
                android:id="@+id/et_password"
                style="@style/item_input_edittext"
                android:layout_marginLeft="@dimen/space_8"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/button_login_style"
            android:layout_marginTop="30dp"
            android:text="@string/next" />
    </LinearLayout>

</RelativeLayout>