<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/site_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" >

        <RelativeLayout
            android:id="@+id/notify_head_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48" >

            <ImageView
                android:id="@+id/my_designer_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_8"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_home_default_user" />

            <TextView
                android:id="@+id/my_notify_title"
                style="@style/site_listview_item_text_style_title"
                android:layout_centerInParent="true"
                android:text="@string/my_tip"
                android:textColor="@color/main_color_black" />
        </RelativeLayout>
        <!-- tabpage -->

        <com.jianfanjia.cn.view.TabPageIndicator
            android:id="@+id/page_indicator"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@+id/notify_head_layout"
            android:background="@android:color/transparent" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>