<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/plan_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:background="@color/head_layout_bg">

        <TextView
            android:id="@+id/share_back"
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:drawableLeft="@mipmap/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/share_title"
            style="@style/listview_item_text_style_big"
            android:layout_centerInParent="true"
            android:text="方案"
            android:textColor="@color/main_color_black" />

        <TextView
            android:id="@+id/baojiaText"
            style="@style/listview_item_text_style_middle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:text="详细报价"
            android:textColor="@color/back_color" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/plan_head_layout">

        <include layout="@layout/viewpager_main" />
    </FrameLayout>

</RelativeLayout>
