<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_12"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/common_title"
        style="@style/site_listview_item_text_style_middle"
        android:layout_gravity="center_horizontal"
        android:textColor="#344a5d" />

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_8" />

    <View
        android:id="@+id/button_bar_divider"
        style="@style/divier_line"
        android:background="@color/main_color_orange"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/negative_bt"
            style="@style/dialog_button"
            android:visibility="gone" />

        <Button
            android:id="@+id/positive_bt"
            style="@style/dialog_button"
            android:layout_marginLeft="@dimen/space_8"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>