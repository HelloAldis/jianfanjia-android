<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_sidebar_default_user" />

            <TextView
                android:id="@+id/name_text"
                style="@style/site_listview_item_text_style_middle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_8"
                android:text="@string/my_example_name"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_text"
                style="@style/site_listview_item_text_style_small"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/tab_rg_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/tab_rb_1"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:checked="true"
                android:padding="10dip"
                android:text="@string/fisrt_page"
                android:textColor="@color/menu_item_font_color"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/tab_rb_2"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:padding="10dip"
                android:text="@string/my_tip"
                android:textColor="@color/menu_item_font_color"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/tab_rb_3"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:padding="10dip"
                android:text="@string/my_designer"
                android:textColor="@color/menu_item_font_color"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/tab_rb_4"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:padding="10dip"
                android:text="@string/my_site"
                android:textColor="@color/menu_item_font_color"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/tab_rb_5"
                style="@style/tab_rb_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dip"
                android:padding="10dip"
                android:text="@string/my_setting"
                android:textColor="@color/menu_item_font_color"
                android:textSize="17sp" />
        </RadioGroup>
    </LinearLayout>

</RelativeLayout>