<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/space_48">

    <FrameLayout
        android:id="@+id/act_login_input_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_48"
        android:layout_marginRight="@dimen/space_48"
        android:background="@drawable/bg_white_corner_rectangle">

        <EditText
            android:id="@+id/act_login_input_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/input_phone"
            android:inputType="phone"
            android:maxLength="15"
            android:nextFocusDown="@+id/act_login_input_password"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:singleLine="true"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/middle_size" />

        <ImageView
            android:id="@+id/act_login_input_phone_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/space_16"
            android:src="@mipmap/icon_input_phone" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_login_input_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_login_input_phone_layout"
        android:layout_marginLeft="@dimen/space_48"
        android:layout_marginRight="@dimen/space_48"
        android:layout_marginTop="@dimen/space_16"
        android:background="@drawable/bg_white_corner_rectangle">

        <EditText
            android:id="@+id/act_login_input_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/tip_please_input_password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingLeft="@dimen/space_32"
            android:paddingRight="@dimen/space_32"
            android:singleLine="true"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/middle_size" />

        <ImageView
            android:id="@+id/act_login_input_password_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:padding="@dimen/space_16"
            android:src="@mipmap/icon_input_psw" />

    </FrameLayout>

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/act_login_input_password_layout"
        android:layout_marginLeft="@dimen/space_48"
        android:layout_marginRight="@dimen/space_48"
        android:layout_marginTop="@dimen/space_48"
        android:background="@drawable/btn_selector_bg"
        android:enabled="false"
        android:text="@string/login"
        android:textColor="@color/font_white"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/act_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="@dimen/space_16"
        android:paddingRight="@dimen/space_16"
        android:text="@string/forget_pwd"
        android:textColor="@color/light_black_color"
        android:textSize="@dimen/middle_size" />

    <LinearLayout
        android:id="@+id/third_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_forget_password"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="horizontal">

        <View
            style="@style/divier_line"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:text="@string/the_third_login"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/middle_size" />

        <View
            style="@style/divier_line"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_login_weixin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_login"
        android:layout_marginTop="@dimen/space_32"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/weixin_login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_weixin" />

        <TextView
            android:id="@+id/weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weixin_login_icon"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/space_2"
            android:text="@string/weixin_login"
            android:textColor="@color/light_black_color"
            android:textSize="@dimen/middle_size" />

    </RelativeLayout>


</RelativeLayout>