<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="72dp"
    android:layout_height="72dp">

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <View
            android:id="@+id/left_line"
            style="@style/divier_line"
            android:layout_width="36dp"
            />

        <View
            android:id="@+id/right_line"
            style="@style/divier_line"
            android:layout_width="36dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_process_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_marginRight="@dimen/space_8"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_home_checked1" />

    <TextView
        android:id="@+id/list_item_process_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_process_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_20"
        android:textColor="@drawable/font_style_colors" />
</RelativeLayout>
