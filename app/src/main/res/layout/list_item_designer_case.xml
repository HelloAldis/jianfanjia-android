<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_case_img"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/list_item_case_title_text"
        style="@style/listview_item_text_style_middle"
        android:layout_below="@id/list_item_case_img"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/list_item_case_produce_text"
        style="@style/listview_item_text_style_small"
        android:layout_below="@id/list_item_case_title_text"
        android:layout_margin="10.0dip"
        android:textColor="@color/main_color_grey" />


</RelativeLayout>