<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/about_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_70"
        android:background="@color/head_layout_bg">

        <TextView
            android:id="@+id/share_back"
            style="@style/listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_8"
            android:drawableLeft="@mipmap/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/share_title"
            style="@style/listview_item_text_style_big"
            android:layout_centerInParent="true"
            android:text="评价设计师"
            android:textColor="@color/main_color_black" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/font_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/font_white"
                    android:orientation="vertical">


                    <com.jianfanjia.cn.layout.CircleImageView
                        android:id="@+id/designer_head_img_1"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/pix_default" />

                    <TextView
                        android:id="@+id/designer_text_1"
                        style="@style/listview_item_text_style_big"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:text="设计师"
                        android:textColor="@color/main_color_black" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:numStars="5"
                        android:rating="5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/main_layout_bg"
                    android:orientation="vertical">

                    <TextView
                        style="@style/listview_item_text_style_big"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/space_10"
                        android:text="给设计师评分"
                        android:textColor="@color/main_color_black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/listview_item_text_style_big"
                            android:layout_gravity="center_vertical"
                            android:text="响应速度:"
                            android:textColor="@color/main_color_black" />

                        <RatingBar
                            android:id="@+id/speedBar"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:stepSize="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/listview_item_text_style_big"
                            android:layout_gravity="center_vertical"
                            android:text="服务态度:"
                            android:textColor="@color/main_color_black" />

                        <RatingBar
                            android:id="@+id/attudeBar"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:numStars="5"
                            android:rating="0" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/contentEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/edit_feedback_bg"
                        android:gravity="top|left"
                        android:hint="请输入您对设计师的评价"
                        android:minLines="10"
                        android:padding="@dimen/space_8"
                        android:textColor="@color/main_color_black"
                        android:textColorHint="@color/horzontal_line_color"
                        android:textSize="@dimen/text_size_14" />

                    <Button
                        android:id="@+id/btn_commit"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_10"
                        android:background="@drawable/btn_selector"
                        android:text="@string/commit"
                        android:textColor="@color/font_white"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>