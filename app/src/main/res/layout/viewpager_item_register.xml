<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_60"
    android:paddingRight="@dimen/space_60">


    <FrameLayout
        android:id="@+id/act_register_input_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <EditText
            android:id="@+id/act_register_input_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/input_phone"
            android:inputType="phone"
            android:maxLength="15"
            android:nextFocusDown="@+id/act_register_input_password"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/middle_size" />


        <ImageView
            android:id="@+id/act_register_input_phone_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>

        <View
            style="@style/divier_line"
            android:layout_gravity="bottom" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/act_register_input_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/act_register_input_phone_layout"
        android:layout_marginTop="@dimen/space_16"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <EditText
            android:id="@+id/act_register_input_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/tip_please_input_password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:nextFocusDown="@+id/act_register_input_phone"
            android:paddingLeft="@dimen/space_16"
            android:paddingRight="@dimen/space_16"
            android:singleLine="true"
            android:textColor="@color/black_color"
            android:textSize="@dimen/middle_size" />

        <ImageView
            android:id="@+id/act_register_input_password_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@mipmap/icon_delete"
            android:visibility="gone"/>

        <View
            style="@style/divier_line"
            android:layout_gravity="bottom" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/button_login_style"
        android:layout_marginTop="180dp"
        android:text="@string/next"
        android:textColor="@color/font_white" />

</RelativeLayout>