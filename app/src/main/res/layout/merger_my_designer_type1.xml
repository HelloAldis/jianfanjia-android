<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ltm_my_designer_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        android:background="@drawable/btn_selector_bg"
        android:id="@+id/merger_button1"
        android:layout_centerVertical="true"
        android:layout_height="48dp"
        android:layout_marginRight="@dimen/space_8"
        android:layout_toLeftOf="@+id/merger_button2"
        android:layout_width="wrap_content"
        android:text="@string/str_req_pubReq"
        android:textColor="@color/font_white" />

    <Button
        android:background="@drawable/btn_selector_bg"
        android:id="@+id/merger_button2"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:text="@string/str_req_pubReq"
        android:textColor="@color/font_white" />
</RelativeLayout>