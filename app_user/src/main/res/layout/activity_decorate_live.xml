<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.jianfanjia.cn.activity.view.MainHeadView
        android:id="@+id/decorate_live_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_layout_bg" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        style="@style/MyCustomTabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/decorate_live_head_layout"
        android:background="@drawable/layout_border_bg"
        android:minHeight="45dp"
        app:tabGravity="fill" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_create_process_layout"
        android:layout_below="@+id/tablayout"
        android:background="@color/main_layout_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/btn_create_process_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_alignParentBottom="true"
        android:background="@color/font_white"
        android:paddingBottom="@dimen/space_5"
        android:paddingLeft="@dimen/space_48"
        android:paddingRight="@dimen/space_48"
        android:paddingTop="@dimen/space_5">

        <TextView
            android:id="@+id/btn_create_process"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_orange_oval_bg"
            android:gravity="center"
            android:text="@string/create_my_process"
            android:textColor="@color/font_white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
