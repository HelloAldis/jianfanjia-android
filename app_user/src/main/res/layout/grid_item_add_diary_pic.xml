<?xml version="1.0" encoding="utf-8"?>
<com.jianfanjia.cn.view.layout.SquareLayout
    android:id="@+id/ll_grid_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_pic"/>

    <TextView
        android:id="@+id/ltm_diary_delte"
        style="@style/listview_item_text_style_middle"
        android:layout_alignBaseline="@+id/ltm_diary_baseinfo"
        android:layout_alignParentRight="true"
        android:padding="@dimen/space_6"
        android:text="@string/str_delete"
        android:textColor="@color/blue_color"/>

</com.jianfanjia.cn.view.layout.SquareLayout>