<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_layout_bg" >

    <RelativeLayout
        android:id="@+id/ownerinfo_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48"
        android:background="@color/head_layout_bg" >

        <TextView
            android:id="@+id/ownerinfo_back"
            style="@style/site_listview_item_text_style_middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_16"
            android:drawableLeft="@drawable/icon_register_back"
            android:drawablePadding="4dp"
            android:text="@string/back"
            android:textColor="@color/back_color" />

        <TextView
            android:id="@+id/ownerinfo_title"
            style="@style/site_listview_item_text_style_title"
            android:layout_centerInParent="true"
            android:text="@string/userinfo"
            android:textColor="@color/main_color_black" />

        <View
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ownerinfo_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ownerinfo_head_layout"
        android:layout_marginTop="@dimen/space_8" >

        <LinearLayout
            android:id="@+id/rootview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/head_layout"
                style="@style/my_item_layout_style"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_16"
                android:paddingTop="@dimen/space_16" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/user_head"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/head_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/head_goto"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_item_default_user" />

                <ImageView
                    android:id="@+id/head_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/name_layout"
                style="@style/my_item_layout_style" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_name"
                    android:textColor="@color/main_color_black" />

                <TextView
                    android:id="@+id/nameText"
                    style="@style/site_listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/name_goto"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/name_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/sex_layout"
                style="@style/my_item_layout_style" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_sex"
                    android:textColor="@color/main_color_black" />

                <TextView
                    android:id="@+id/sexText"
                    style="@style/site_listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/sex_goto"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/sex_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/phone_layout"
                style="@style/my_item_layout_style" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_phone"
                    android:textColor="@color/main_color_black" />

                <TextView
                    android:id="@+id/phoneText"
                    style="@style/site_listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/phone_goto"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/phone_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/address_layout"
                style="@style/my_item_layout_style" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_address"
                    android:textColor="@color/main_color_black" />

                <TextView
                    android:id="@+id/addressText"
                    style="@style/site_listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/address_goto"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/address_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <RelativeLayout
                android:id="@+id/home_layout"
                style="@style/my_item_layout_style" >

                <TextView
                    style="@style/site_listview_item_text_style_middle"
                    android:layout_centerVertical="true"
                    android:text="@string/user_home"
                    android:textColor="@color/main_color_black" />

                <TextView
                    android:id="@+id/homeText"
                    style="@style/site_listview_item_text_style_small"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:layout_toLeftOf="@+id/home_goto"
                    android:textColor="@color/main_color_black" />

                <ImageView
                    android:id="@+id/home_goto"
                    style="@style/my_item_layout_image_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <View style="@style/divier_line" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/button_login_style"
                android:layout_margin="@dimen/space_24"
                android:text="@string/comfirm" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>