<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/main_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_48">

        <RelativeLayout
            android:id="@+id/head_back_layout"
            android:layout_width="@dimen/space_70"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/space_14">

            <ImageView
                android:id="@+id/head_back"
                style="@style/listview_item_text_style_middle"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_register_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/head_center_title"
            style="@style/listview_item_text_style_big"
            android:layout_centerInParent="true"
            android:textColor="@color/main_color_black" />

        <TextView
            android:id="@+id/head_right_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/space_14"
            android:paddingRight="@dimen/space_14"
            android:textColor="@color/main_color_black"
            android:textSize="@dimen/middle_size" />

        <View
            android:id="@+id/head_divier"
            style="@style/divier_line"
            android:layout_alignParentBottom="true"
            android:background="@color/horzontal_line_color" />
    </RelativeLayout>

</FrameLayout>