<?xml version="1.0" encoding="utf-8"?>
<com.jianfanjia.cn.designer.view.layout.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_grid_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/space_8"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_check_delete"
        android:visibility="gone" />

</com.jianfanjia.cn.designer.view.layout.SquareLayout>