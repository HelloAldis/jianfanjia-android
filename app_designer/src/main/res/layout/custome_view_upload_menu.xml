<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_setting_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_24"
        android:scaleType="center"
        android:src="@mipmap/icon_upload_product_set_cover"/>

    <ImageView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_24"
        android:scaleType="center"
        android:src="@mipmap/icon_uploadproduct_edit"/>

    <ImageView
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_24"
        android:scaleType="center"
        android:src="@mipmap/icon_upload_product_delete"/>

    <ImageView
        android:id="@+id/btn_openOrClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/space_24"
        android:scaleType="center"
        android:src="@mipmap/icon_upload_product_close"/>

</FrameLayout>