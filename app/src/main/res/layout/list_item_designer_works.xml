<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_border"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_item_works_img"
            android:layout_width="match_parent"
            android:layout_height="250dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/list_item_works_xiaoqu_text"
            style="@style/listview_item_text_style_middle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10"
            android:text="小区名称"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/list_item_works_produce_text"
            style="@style/listview_item_text_style_small"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="@dimen/space_10"
            android:text="100平米"
            android:textColor="@color/main_color_grey" />
    </LinearLayout>

    <View
        style="@style/home_page_divier_line"
        android:layout_marginTop="10dip"
        android:background="@color/transparent" />
</LinearLayout>